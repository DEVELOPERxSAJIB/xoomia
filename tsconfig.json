{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
